@*
    Widok 404 - Not Found
*@
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <title>404 - Nie znaleziono</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            background-color: #2c2f33;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #ffffff;
        }

        .error-page {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            text-align: center;
        }

        .error-box {
            background-color: #23272a;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
            max-width: 500px;
            width: 90%;
        }

        h1 {
            font-size: 72px;
            margin-bottom: 20px;
            color: #7289da;
        }

        p {
            font-size: 18px;
            margin-bottom: 30px;
        }

        a.btn-home {
            display: inline-block;
            padding: 10px 25px;
            background-color: #7289da;
            color: #ffffff;
            border: none;
            border-radius: 6px;
            text-decoration: none;
            font-weight: bold;
        }

            a.btn-home:hover {
                background-color: #5b6eae;
            }
    </style>
</head>
<body>
    <div class="error-page">
        <div class="error-box">
            <h1>404</h1>
            <p>Ups! Strona, której szukasz, nie została znaleziona.</p>
            <a href="/" class="btn-home">Powrót do strony głównej</a>
        </div>
    </div>
</body>
</html>
