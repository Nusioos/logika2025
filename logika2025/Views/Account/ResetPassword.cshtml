@model logika2025.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Resetowanie hasła";
}

<div class="reset-page">
    <div class="reset-box">
        <h2 class="text-center mb-4 text-light">Resetowanie hasła</h2>

        <form asp-action="ResetPassword" method="post">
            <div class="form-group mb-3">
                <label for="NewPassword" class="text-light">Nowe hasło</label>
                <input asp-for="NewPassword" class="form-control custom-input" type="password" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ConfirmPassword" class="text-light">Potwierdź nowe hasło</label>
                <input asp-for="ConfirmPassword" class="form-control custom-input" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="Token" value="@Model.Token" /> 

            <button type="submit" class="btn btn-primary w-100">Zresetuj hasło</button>
        </form>
    </div>
</div>
