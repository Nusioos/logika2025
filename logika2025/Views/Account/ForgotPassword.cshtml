@model logika2025.Models.LoginViewModel

<style>
    body, html {
        height: 100%;
        margin: 0;
        background-color: #2c2f33;
    }

    .forgot-page {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100%;
    }

    .forgot-box {
        background-color: #23272a;
        padding: 50px 40px;
        border-radius: 12px;
        width: 100%;
        max-width: 400px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
    }

    .custom-input {
        background-color: #40444b;
        color: #ffffff;
        border: none;
        height: 45px;
    }

        .custom-input:focus {
            background-color: #40444b;
            color: #ffffff;
            border: 1px solid #7289da;
            box-shadow: 0 0 6px #7289da;
        }

    .btn-primary {
        background-color: #7289da;
        border: none;
    }

        .btn-primary:hover {
            background-color: #5b6eae;
        }
</style>

<div class="forgot-page">
    <div class="forgot-box">
        <h2 class="text-center mb-4 text-light">Resetowanie hasła</h2>

        <form asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="text-light">Podaj swój email</label>
                <input asp-for="Email" class="form-control custom-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100">Wyślij link resetujący</button>
        </form>
    </div>
</div>
