@model logika2025.Models.LoginViewModel
<style>body, html {
    height: 100%;
    margin: 0;
    background-color: #2c2f33;
}

.login-page {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
}

.login-box {
    background-color: #23272a;
    padding: 50px 40px;
    border-radius: 12px;
    width: 100%;
    max-width: 400px;
    box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
}

.custom-input {
    background-color: #40444b;
    color: #ffffff;
    border: none;
    height: 45px;
}

.custom-input:focus {
    background-color: #40444b;
    color: #ffffff;
    border: 1px solid #7289da;
    box-shadow: 0 0 6px #7289da;
}

.btn-primary {
    background-color: #7289da;
    border: none;
}

.btn-primary:hover {
    background-color: #5b6eae;
}

.btn-outline-light {
    color: #ffffff;
    border: 1px solid #ffffff;
}

.btn-outline-light:hover {
    background-color: #ffffff;
    color: #23272a;
}
</style>
<div class="login-page">
    <div class="login-box">
        <h2 class="text-center mb-4 text-light">Logowanie</h2>

        <form asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label for="Email" class="text-light">Email</label>
                <input type="email" asp-for="Email" class="form-control custom-input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label for="Password" class="text-light">Hasło</label>
                <input type="password" asp-for="Password" class="form-control custom-input" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary">Zaloguj</button>
                <a asp-controller="Account" asp-action="Register" class="btn btn-outline-light">Rejestracja</a>
            </div>
          

            <div class="text-center">
                <a asp-controller="Account" asp-action="ForgotPassword" class="text-light">Nie pamiętasz hasła?</a>
            </div>
        </form>
    </div>
</div>
