<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Logika2025</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Logika2025.styles.css" asp-append-version="true" />
    <style>
        body {
            background-color: #121212;
            color: #e0e0e0;
            padding-top: 56px; 
        }

        .navbar {
            background-color: #202225 !important;
            position: fixed; 
            top: 0;
            left: 0;
            width: 100%;
            z-index: 9999; 
                border-bottom: 1px solid #202225 !important; 
        }

            .navbar .nav-link {
                color: #e0e0e0 !important;
            }

                .navbar .nav-link:hover {
                    color: #ffffff !important;
                }

        .footer {
    border-top: 1px solid #000 !important;
         background-color: #202225;
}


            .footer a {
                color: #ccc;
            }

                .footer a:hover {
                    color: #fff;
                }

        .box-shadow {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.7) !important;
        }

      
        main {
            background-color: #1a1a1a;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-top: 56px; 
        }

       
        section#Test {
            padding: 3rem 1rem;
            background-color: #3a3b3d; 
            color: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 80px;
        }

        a.navbar-brand {
            color: #ffffff !important;
        }

            a.navbar-brand:hover {
                color: #e0e0e0 !important;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
 
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Logika2025</a>


                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

             
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Start</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Test">Test</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/Home/Tabela">Leaderboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                           
                        </ul>

                        <div class="d-flex align-items-center text-light">
                            <span class="me-2">👤 @User.Identity.Name</span>
                            <span class="badge bg-success">Online</span>
                        </div>
                    </div>
                }

            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - logika2025 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
